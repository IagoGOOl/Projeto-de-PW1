// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  posts Post[]
  comments Comment[]

  @@map("user")
}

model Post {
  id  Int @id @default(autoincrement())
  title String @unique
  description String
  authorId Int

  author User @relation(fields: [authorId], references: [id])

  comments Comment[]

  @@map("post")
}

model instituicao {
  id Int @id @default(autoincrement())
  nome_instituicao String
  
}

model Comment {
  id  Int @id @default(autoincrement())
  description String
  authorId Int

  author User @relation(fields: [authorId], references: [id])

  postId Int

  post Post @relation(fields: [postId], references: [id])

  @@map("comment")
}
