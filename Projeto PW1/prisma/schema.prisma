// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  @@map("user")
}

model Receita {
  id Int @id @default(autoincrement())
  name_receita String
  ingredientes String
  modo_de_preparo String
  @@map("receitas")
}

model Fetilizante {
  id Int @id @default(autoincrement())
  name_fetilizante String
  ingredientes String
  mode_de_preparo String
  finalidade String

  @@map("fertilizantes")
}

model instituicao {
  id Int @id @default(autoincrement())
  nome_instituicao String
  
}
